@model SimpleKonwWebDevelope.Models.HomePageViewModel
@{
    ViewBag.Title = "职员列表";
}
<h1>Welcome</h1>
<div>消息来自Controller的视图文件</div>
<table>
    <tr>
        <td>ID</td>
        <td>姓名</td>
        <td>操作</td>
    </tr>
    @foreach (var employee in Model.Employees)
    {
        <tr>
            @*<td><a href="../Home/EmployeeDetail/@employee.Id">@employee.Id</a></td>*@
            @*<td>
                    @Html.ActionLink(employee.Id.ToString(), "EmployeeDetail",
                   new
                   {
                       Controller = "Home",
                       id = employee.Id
                   })
                </td>*@
            <td>@employee.Id</td>
            <td>@employee.Name</td>
            <td>
                <a asp-action="EmployeeDetail" asp-route-id="@employee.Id">详情</a>&nbsp;
                <a asp-action="EmployeeEdit" asp-route-id="@employee.Id">编辑</a>&nbsp;
            </td>
        </tr>
    }
</table>
<p><a asp-action="EmployeeCreate">添加员工</a></p>
